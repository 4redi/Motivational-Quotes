{
    "manifest_version":3,
    "name": "Motivational Quotes",
    "version":"1.0",
    "description":"A simple chrome widget that generates motivational quotes",
    "permissions":["storage"],
    "action":{
        "default_popup":"index.html",
        "default_icons":{
            "16":"assets/icon_16x16.png",
            "48":"assets/icon_48x48.png",
            "128":"assets/icon_128x128.png"
        }
    },
    "icons":{
        "16":"assets/icon_16x16.png",
        "48":"assets/icon_48x48.png",
        "128":"assets/icon_128x128.png"
    }
}